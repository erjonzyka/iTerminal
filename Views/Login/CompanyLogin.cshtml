@model CompanyLogin

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="d-flex justify-content-center">
    <div class="col-6">
    <h1>Company Login</h1>
    
    <form asp-action="CompanyLogin" method="post" asp-controller="Login">
        <div class="form-group">
            <label asp-for="LEmail" >Email</label>
            <input asp-for="LEmail" class="form-control " id="exampleFormControlInput1" >
            <span asp-validation-for="LEmail" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="LPassword">Password</label>
            <input asp-for="LPassword" type="password" class="form-control"  id="exampleInputPassword1">
            <span asp-validation-for="LPassword" class="text-danger font-italic mb-3"></span>
        </div>
        <button type="submit" class="mt-4 btn btn-primary w-100 p-3">Login</button>
    </form>
    <a asp-action="CompReg" asp-controller="Login" class="mt-4 btn btn-outline-success w-100 p-3">Register</a>
    </div>
    </div>
</body>

</html>