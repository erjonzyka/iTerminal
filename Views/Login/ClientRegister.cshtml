@model UserReg

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
</head>

<body>
<div class="col-6">
    <h1 class="text-white">Register</h1>
    <form  method="post" asp-action="Register" asp-controller="Login">
        <div class="form-group">
            <label asp-for="FirstName" class="text-white">First Name</label>
            <input asp-for="FirstName"  class="form-control bg-black text-white" id="exampleFormControlInput1">
            <span asp-validation-for="FirstName" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="text-white">Last Name</label>
            <input asp-for="LastName"  class="form-control bg-black text-white" id="exampleFormControlInput1">
            <span asp-validation-for="LastName" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="text-white">Email</label>
            <input asp-for="Email"  class="form-control bg-black text-white" id="exampleFormControlInput1">
            <span asp-validation-for="Email" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="text-white">Password</label>
            <input asp-for="Password" type="password"  class="form-control bg-black text-white" id="exampleInputPassword1"
               >
            <span asp-validation-for="Password" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pwconfirm" class="text-white">Confirm Password</label>
            <input asp-for="Pwconfirm" type="password"  class="form-control bg-black text-white" id="exampleInputPassword1"
                >
            <span asp-validation-for="Pwconfirm" class="text-danger font-italic mb-3"></span>
        </div>
        <button type="submit" class="mt-4 btn btn-success w-100 p-3">Register</button>
    </form>
</div>

</body>

</html>