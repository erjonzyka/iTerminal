@model Company

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
</head>

<body>
<div class="col-6">
    <h1 class="text-white">Register</h1>
    <form  method="post" asp-action="CompanyRegister" asp-controller="Login">
        <div class="form-group">
            <label asp-for="Name">Company Name</label>
            <input asp-for="Name"  class="form-control bg-black text-white" id="exampleFormControlInput1">
            <span asp-validation-for="Name" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" >Email</label>
            <input asp-for="Email"  class="form-control bg-black text-white" id="exampleFormControlInput1">
            <span asp-validation-for="Email" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password"  class="form-control bg-black text-white" id="exampleInputPassword1"
               >
            <span asp-validation-for="Password" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pwconfirm">Confirm Password</label>
            <input asp-for="Pwconfirm" type="password"  class="form-control bg-black text-white" id="exampleInputPassword1"
                >
            <span asp-validation-for="Pwconfirm" class="text-danger font-italic mb-3"></span>
        </div>
        <button type="submit" class="mt-4 btn btn-success w-100 p-3">Register</button>
    </form>
</div>

</body>

</html>